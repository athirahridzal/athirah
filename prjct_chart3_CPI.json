{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Corruption on Income per Capita",
    "subtitle": [
      "CPI (0=High , 100=Low Perceived Corruption)",
      "Source: World Bank, Transparency International"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11.5,
    "anchor": "start",
    "fontSize": 16,
    "color": "tomato"
  },
  "height": 300,
  "width": "container",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/dataCPIgdp.csv"
      },
      "mark": {"type": "point", "size": 100, "filled": true},
      "encoding": {
        "x": {
          "field": "cpi",
          "type": "quantitative",
          "title": "Corruption Perception Index",
          "scale": {"domain": [15, 90]},
          "axis": {
            "titleColor": "black",
            "titleFontSize": 13,
            "titleFontWeight": "lighter", 
            "grid": false,
            "labelFontSize":11
          }
        },
        "y": {
          "field": "gdppc",
          "type": "quantitative",
          "title": "GDP per capita",
          "scale": {"domain": [0, 120100]},
          "axis": {
            "titleColor": "black",
            "titleFontSize": 13,
            "titleFontWeight": "lighter",
            "grid": false,
            "labelFontSize":11
          }
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "cpi", "type": "nominal", "title": "CPI"},
          {
            "field": "gdppc",
            "type": "nominal",
            "title": "GDP per Capita",
            "format": ".2f"
          }
        ],
        "color": {
          "field": "category",
          "type": "nominal",
          "title": "Colonial Empire:",
          "scale": {"scheme": "darkred"},
          "legend": {
            "orient": "top-left",
            "labelFontSize": 12,
            "titleFontSize": 12,
            "titleFontWeight": "normal"
          }
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/dataCPILine.csv"
      },
      "mark": {"type": "line", "color": "grey"},
      "encoding": {
        "x": {"field": "xFitted", "type": "quantitative"},
        "y": {"field": "yFitted", "type": "quantitative"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/dataCPIgdp.csv"
      },
      "transform": [
        {
          "regression": "gdppc",
          "on": "cpi",
          "method": "poly",
          "order": 3,
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "crimson",
        "fontSize": 12,
        "x": "width",
        "align": "right",
        "fontWeight": "bolder",
        "y": -5
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ]
}
