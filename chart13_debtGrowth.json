{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
        "text": "Household Debt Service Growth",
        "subtitle": "Debt service payments as a percent of disposable income , Source: FRED",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "mediumseagreen"
    },

    "data": {
        "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/data_FRED-TDSP.json",
        "format": {"property": "observations"}
    },

    "height": 300,
    "width": 310,

    "mark": {"type": "line", "point": false, "color": "red"},

    "encoding": {
        "x": {"field": "date", "type": "ordinal", "timeUnit": "yearmonth", "title": null}
    },

    "layer": [
        {
            "encoding": {
                "y": {
                    "field": "value",
                    "type": "quantitative",
                    "title": null,
                    "axis": {
                        "grid": true
                    }
                }
            },
            "layer": [
                {"mark": {"type": "line", "align": false, "color": "red"}},
                {
                    "transform": [{"filter": {"selection": "hover"}}],
                    "mark": {"type": "circle", "size": 150, "color": "red"}
                }
            ]
        },
        {
            "mark": "rule",
            "encoding": {
                "opacity": {
                    "condition": {"value": 0, "selection": "hover"},
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "date",
                        "type": "ordinal",
                        "timeUnit": "yearmonth",
                        "title": "Year"
                    },
                    {"field": "value", "type": "quantitative", "title": "Quarterly Change %"}
                ]
            },
            "selection": {
                "hover": {
                "type": "single",
                "fields": ["date"],
                "nearest": true,
                "on": "mouseover",
                "empty": "none",
                "clear": "mouseout"
            }
        }
      }
    ]
  }
