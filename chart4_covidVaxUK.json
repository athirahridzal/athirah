{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
 
  "title": {
    "text": "COVID-19 Vaccination",
    "subtitle": "First dose vaccination by vaccination date",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "darkorchid", 
    "fontSize":16
  },
 
  "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=utla&metric=newPeopleVaccinatedFirstDoseByVaccinationDate&format=csv",
    "format": {"type": "csv"}
  },
 
  "transform": [
    {
      "filter": {
        "field": "areaName",
        "oneOf": ["City of Edinburgh", "Coventry", "Bristol, City of"]
      }
    }
  ],
 
  "height": 300,
  "width": 310,
 
  "mark": {"type": "line", "point": false},
 
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "newPeopleVaccinatedFirstDoseByVaccinationDate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": true}
    },
    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "tableau10"},
      "title": null,
      "legend": {"orient": "top-right", "fillColor": null, "labelFontSize": 9.5}
    }
  }
}
