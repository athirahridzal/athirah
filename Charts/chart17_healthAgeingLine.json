{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/dataHealthAgeing.csv"
  },
  "title": {
        "text": "Ageing Society on Public Healthcare",
        "subtitle": ["Spending per capita PPP and ratio of 65+ to working-age population", "Source: World Bank"],
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "fontSize": 15,
        "color": "rebeccapurple"
    },

  "height":300,
  "width":"container",

  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color":"plum"
      },
      "encoding": {
        "x": {
          "field": "Dependency",
          "type": "quantitative",
          "title": "Dependency Ratio",
          "axis":{"titleColor":"black", "titleFontSize":13, "titleFontWeight":"lighter"}
        },
        "y": {
          "field": "HealthExpPC",
          "type": "quantitative",
          "title": "Healthcare Spending",
          "axis":{"titleColor":"black", "titleFontSize":13, "titleFontWeight":"lighter"}
        }
      }
    },
    {
      "data": {"url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/dataHealthAgeingStraight.csv"},
      "mark": {
        "type": "line",
        "color":"grey"
      },
      "encoding": {
        "x": {
          "field": "xStraight",
          "type": "quantitative"
        },
        "y": {
          "field": "yStraight",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "HealthExpPC",
          "on": "Dependency",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "crimson",
        "fontSize":12,
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
