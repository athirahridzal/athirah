{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Deaths from COVID-19",
    "subtitle":"Cumulative death by death date",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":12,
    "subtitleColor": "lightgrey",
    "anchor": "start",
    "fontWeight": 1000,
    "color": "floralwhite"
  },
  
   "data": {
    "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/CovidDeath.csv",
    "format": {"type": "csv"}
  },

   "transform":[
      
      {"filter": {
        "field": "areaName", 
      "oneOf": ["City of Edinburgh", "Coventry", "Bristol, City of"]}
      }


    ],
  
 "config": {
  "background":"#5a5a5f"}
  <!-- "view": { -->
   <!--  "stroke": "transparent"}},  -->
  
  "height": 300,
  "width": 310,
   
  "mark": {"type": "line", "point": false},
 
  "encoding": {

    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false, "labelColor":"palegreen"}
    },

    "y": {
      "field": "cumDeaths28DaysByDeathDate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": true, "labelColor":"palegreen"}
    },

    "color":{
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "magma"},
      "title": null,
      "legend": {
        "orient": "top-left", 
        "fillColor":null,
        "labelFontSize":9.5,
        "labelColor": "lightyellow"
        }
    }
}
}
