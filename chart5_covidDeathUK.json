{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
 
  "title": {
    "text": "Deaths from COVID-19",
    "subtitle": ["Cumulative death by death date","Source: UK gov"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "fontSize": 16,
    "color": "indianred"
  },
 
  "data": {
    "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/CovidDeath.csv",
    "format": {"type": "csv"}
  },
 
  "transform": [
    {
      "filter": {
        "field": "areaName",
        "oneOf": ["City of Edinburgh", "Coventry", "Bristol, City of"]
      }
    }
  ],
 
  "height": 300,
  "width": "container",
 
  "mark": {"type": "line", "point": false},
 
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "cumDeaths28DaysByDeathDate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": true}
    },
    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "magma"},
      "title": null,
      "legend": {"orient": "top-left", "fillColor": null, "labelFontSize": 9.5}
    }
  }
}
