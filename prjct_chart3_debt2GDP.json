{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Government Debt",
    "subtitle": [
      "Debt as a percentage of GDP",
      "Source: World Bank"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "fontSize": 16,
    "anchor": "start",
    "color": "darkmagenta"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/dataDebt2Gdp.csv",
    "format": {"type": "csv"}
  },
  "height": 500,
  "width": "container",
  "mark": {"type": "bar"},
  "transform": [{"filter": "datum.year==year"}],
  "params": [
    {
      "name": "year",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2016,
        "step": 1,
        "name": "Select year:"
      }
    }
  ],
  "encoding": {
    "y": {
      "field": "country",
      "type": "nominal",
      "title": null,
      "axis": {"grid": false, "labelFontSize": 12},
      "sort": "-x"
    },
    "x": {
      "field": "debt2gdp",
      "type": "quantitative",
      "title": null,
      "axis": {
        "grid": false,
        "titleColor": "black",
        "titleFontSize": 13,
        "titleFontWeight": "normal",
        "labelFontSize": 12
      }
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "title": "Colonial Empire:",
      "scale": {"scheme": "set1"},
      "legend": {
        "orient": "bottom-right",
        "labelFontSize": 12,
        "titleFontSize": 12,
        "titleFontWeight": "normal"
      }
    },
    "tooltip": [
      {"field": "category", "type": "nominal", "title": "Colonised by"},
      {"field": "country", "type": "nominal", "title": "Country"},
      {"field": "debt2gdp", "type": "quantitative","title": "Debt-to-GDP", "format":".2f"}
    ]
  }
}
