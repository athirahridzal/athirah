{"$schema" : "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Income Tax Growth",
    "subtitle":"Annual growth of income taxes since 1988 in the UK, Source: ONS",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "mediumseagreen"

  },
  
   "data": {"url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/data_ONS-KGT3.json", "format":{"property":"years"}},


   
  "height": 300,
  "width": 310,
   
  
  "mark": {"type": "line", "point": false, "color":"red"},
   
  "encoding": 
  {"x": {"field": "date", "type": "ordinal", "timeUnit":"year", "title":null}},

  "layer": [
    {"encoding": {
        "y": {"field": "value", 
              "type": "quantitative", 
              "title":null, "axis": {"grid": true, "gridColor": {"condition": {"test": "datum.value === 0", "value": "black"},"value": "#ddd"}}}},
        
"layer": [
          {"mark":{
            "type": "line",
            "align": false,
           
            "color": "red"}},
          {"transform": 
            [{"filter": {"selection": "hover"}}], 
               "mark": {
                 "type":"circle",
                 "size":150,
                 "color":"red"}}
      ]
    },
    
  {"mark": "rule", 
      "encoding": {
         "opacity": {
           "condition": {"value": 0, "selection": "hover"},
           "value": 0 },
          "tooltip": [
          {"field": "date", "type": "ordinal", "timeUnit":"year", "title":"Year"},  
          {"field": "value", "type": "quantitative", "title":"Annual Change %"}]
           },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["date"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ]
}
