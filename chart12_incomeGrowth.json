{"$schema" : "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Income Growth",
    "subtitle":"Annual wage and salaries since 1988 in the UK, Source: ONS",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "darkcyan"

  },
  
   "data": {"url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/data_ONS-KGQ2.json", "format":{"property":"years"}},


   
  "height": 300,
  "width": 310,
   
  "mark": {"type": "line", "point": false, "color":"deepskyblue"},
  
  "encoding": 
  {"x": {"field": "date", "type": "ordinal", "timeUnit":"year", "title":null}},

  "layer": [
    {"encoding": {
        "y": {"field": "value", 
              "type": "quantitative", 
              "title":null}},
        
        "layer": [
          {"mark":{
            "type": "line",
            "align": false,
             "color": "deepskyblue"}},
          {"transform": 
            [{"filter": {"selection": "hover"}}], 
               "mark": {
                 "type":"circle",
                 "size":150,
                 "color":"darkcyan"}}
      ]
    },
    
    {"mark": "rule", 
      "encoding": {
         "opacity": {
           "condition": {"value": 0, "selection": "hover"},
           "value": 0 },
          "tooltip": [
          {"field": "date", "type": "ordinal", "timeUnit":"year", "title":"Date"},  
          {"field": "value", "type": "quantitative", "title":"Annual Change"}]
           },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["date"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ]
}

  
