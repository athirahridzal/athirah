{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
        "text": "GDP Growth G7 Countries",
        "subtitle": ["Forecasted GDP growth of G7 countries", "Source: World Bank, IMF"],
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 12,
        "fontSize": 16,
        "anchor": "start",
        "color": "darkgreen"
    },
    
    "data": {
        "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/dataGdpGrowth.csv",
        "format": {"type": "csv"}
    },
  
    "height": 300,
    "width": "container",
  
    "mark": {"type": "line", "point": false, "width": 5},
    
    "transform": [
        {"filter": {"selection": "Region"}}, 
        {"filter": {"field": "Time","range": [{"year": 2006},{"year": 2026}]}}
    ],
    
    "selection": {
        "Region": {
            "type": "single",
            "fields": ["Country"],
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Canada",
                    "France",
                    "Italy",
                    "Japan",
                    "Germany",
                    "United Kingdom",
                    "United States"
                ],
                "name": "Select a country"
            }
        }
    },
    
    "encoding": {
        "x": {"field": "Time", "type": "temporal", "title": null, "axis": {"grid": false}},
        "y": {"field": "GDPGrowth", "type": "quantitative", "title": null,
        "axis": {"grid": true}},
        "color": {
            "field": "Country",
            "type": "nominal",
            "title": null,
            "legend": null,
            "scale": {
                "range": [
                   "#B2FF66",
                   "#B2FF66",
                   "#B2FF66",
                   "#B2FF66",
                   "#B2FF66",
                   "#009900",
                   "#B2FF66"
                ]
            }
        }
    }
}
  
