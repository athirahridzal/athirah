{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "GDP Growth G7 Countries",
    "subtitle": "Annual GDP growth of G7 countries, Source: World Bank",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "fontSize": 16,
    "anchor": "start",
    "color": "palegreen"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/athirahridzal/athirahridzal.github.io/main/gdpGrowth.csv",
    "format": {"type": "csv"}
  },
  "height": 300,
  "width": 310,
  "mark": {"type": "line", "point": false, "width": 10},

  "transform": [
    {"filter": {"field": "Country Name",
      "oneOf": ["Canada","France","Italy","Japan","Germany", "United Kingdom","United States"] } }
  ],

  "selection": {
    "Country Name": {
      "type": "single",
      "fields": ["Country Name"],
      "bind": {
        "input": "select",
        "options": [null,"Canada","France","Italy","Japan","Germany","United Kingdom","United States"],
        "name": "Country"
      }
    }
  },
  "encoding": {
    "x": {"field": "Time", "type": "temporal", "title": null},
    "y": {"field": "GDP Growth", "type": "quantitative", "title": null},
    "color": {
      "field": "Country Name",
      "type": "nominal",
      "title": null,
     "legend":null,
      "scale": {
        "range": ["#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "blue", "#C1D0E6"]
      }
    }
  }
}
