{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "GDP Growth G7 Countries",
    "subtitle": "Annual GDP growth of G7 countries, Source: World Bank",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "fontSize": 16,
    "anchor": "start",
    "color": "palegreen"
  },

  "data": {"url": "https://github.com/athirahridzal/athirahridzal.github.io/blob/main/gdpGrowth.csv", "format":{"type": "csv"}},

  "height": 300,
  "width": 310,
   
  "mark": {"type": "line", "point": false, "width":10},
    
  "transform": [{"filter": {"selection":"Country Name"}}], 

  "selection": {
      "Country Name": {
        "type": "single",
        "fields": ["Country Name"],
        "bind": {
          "input": "select",
          "options": [
            null,
            "Canada",
            "France",
            "Italy",
            "Japan",
            "Germany",
            "United Kingdom",
            "United States of America"
          ],
          "name": "Country"
        }
      }
    },

  "encoding": {
    "x": {
      "field": "Time",
      "type": "temporal",
      "title": null
      },
     "y": {
          "field": "GDP Growth",
          "type": "quantitative",
          "title": null},
    

      "color": {
      "field": "Country Name",
      "type": "nominal",
       "title": null,
      "legend": {
        "orient": "bottom-left", 
        "fillColor": null,
        "labelFontSize":9.5
       },
       "scale": {"range": ["#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "blue", "#C1D0E6"]}
  }
  }}

